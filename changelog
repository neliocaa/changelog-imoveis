wp_head in Design Setup

<script language="javascript" src="http://127.0.0.1/imoveis/wp-content/themes/RT/templates/template_realestate_theme/jquery.price_format.2.0.js" type="text/javascript"></script>
<script language="javascript" type="text/javascript">
//Evita que o formul√°rio seja enviado ao pressionar "Enter"
function stopEnterSubmitting(e) {
    if (e.keyCode == 13) {
        var src = e.srcElement || e.target;
        if (src.tagName.toLowerCase() != "textarea" && src.tagName.toLowerCase() != "div") {
            if (e.preventDefault) {
                e.preventDefault();
            } else {
                e.returnValue = false;
            }
        }
    }
}
</script>
